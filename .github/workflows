name: CI for Pull Request # workflow 의 이름

on: # 해당 workflow 가 trigger 될 event 를 설정합니다
  pull_request: # pull_request event 일 때,
    branches: # main branch 에 대한 event 일 때,
      - main
jobs:
  build:
    runs-on: self-hosted # label 이 self-hosted 인 runner 에서 실행됩니다
    steps: # job 수행 단위
      - name: Checkout code # 1. 현재 commit으로 checkout 한다
        uses: actions/checkout@v3
      - name: Set up Node.js # 2. node js 를 setup 한다
        uses: actions/setup-node@v3
        with:
          node-version: 20
      - name: Install dependencies # 3. dependency 를 설치하고
        run: npm install
      - name: Run tests # 4. test 수행
        run: npm test
